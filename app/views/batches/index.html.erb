
  <div class="header clearfix">

    <div class="jumbotron text-center">
      <h1>Classes</h1>
    </div>

    <%= link_to "Create a new Class", new_batch_path, :class => "btn btn-success" %>

    <table class="table" style="width:100%;">
      <thead>
        <tr>
          <td style="width:20%;">Name</td>
          <td style="width:20%;">Start Date</td>
          <td style="width:20%;">End Date</td>
          <td style="width:40%;"></td>
        </tr>
      </thead>
      <tbody>

      <% @batches.each do |batch| %>
        <% student_count = Student.where(batch_id: batch.id).count() %>
        <tr>
          <td>
            <%= link_to batch.name, batch_path(batch), :class => "btn btn-success" %>
          </td>
          <td>
            <%= batch.start_date.strftime("%d-%m-%Y") %>
          </td>
          <td>
            <%= batch.end_date.strftime("%d-%m-%Y") %>
          </td>

          <td>
            <%= student_count %> Students
          </td>

        </tr>
      <% end %>
      </tbody>
    </table>

  </div>   <!-- class="header clearfix" -->
